---
import type { Page, PaginateOptions } from 'astro'

interface Props {
  page: Page
}

const { page } = Astro.props
---

<div class="join mx-auto">
  {
    page.url.prev ? (
      <a class="join-item btn" href={page.url.prev}>
        &larr; Prev
      </a>
    ) : (
      <span class="join-item btn btn-disabled">&larr; Prev</span>
    )
  }
  <div class="join-item btn btn-neutral cursor-default">
    {page.currentPage} of {page.lastPage}
  </div>
  {
    page.url.next ? (
      <a class="join-item btn" href={page.url.next}>
        Next &rarr;
      </a>
    ) : (
      <span class="join-item btn cursor-not-allowed">Next &rarr;</span>
    )
  }
</div>
